<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

  <!-- a bean for user services -->
  <bean id="companyService" class="org.jcanomedina.blog.CompanyService"/>

  <camelContext xmlns="http://camel.apache.org/schema/spring">
  	<camel:restConfiguration component="spark-rest" bindingMode="json"/>
  	<camel:rest path="/company">
  		<camel:get uri="/view/{id}" outType="org.jcanomedina.blog.Company"> 
  			<camel:to uri="bean:companyService?method=getCompany(${header.id})"/>
  		</camel:get>
  		<camel:get uri="/list" outType="org.jcanomedina.blog.Company"> 
  			<camel:to uri="bean:companyService?method=listCompanies"/>
  		</camel:get>
  		<camel:put uri="/new" type="org.jcanomedina.blog.Company"> 
  			<camel:to uri="bean:companyService?method=addCompany"/>
  		</camel:put>
  	</camel:rest>
  </camelContext>

</beans>